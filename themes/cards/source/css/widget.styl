.header
    display flex
    justify-content space-between
    align-items center
    min-height var(--header-height)
    padding 0 calc(var(--space)/2)
    top 0
    z-index 10

    .header__left
    .header__right
        display flex
        align-items center
        font-family rubik,sans-serif,Varela Round

@media screen and (min-width: 1024px)
    .header
        position sticky
        width 100%

.footer
    display block
    align-items center
    justify-content center
    padding 0
    margin-top 4rem
    margin-bottom 2rem
    text-align center
    font-size 1.1em
    font-family rubik,-apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,pingfang sc,noto sans cjk sc,sarasa gothic sc,microsoft yahei,sans-serif,Apple Color Emoji,Segoe UI Emoji,Varela Round
    color $color_footer_text

    *
        margin 0 auto
        margin-block-start 0em
        margin-block-end 0em
        margin-inline-start 0px
        margin-inline-end 0px

    >span
        margin 0 .35em

    a
        color $color_footer_link
        text-decoration none

    svg
        margin-right .2rem

.cover
    display block
    text-align center
    margin 3rem auto 3rem auto

    .cover__logo
        max-width var(--logo-width)
        height auto
        margin-left auto
        margin-right auto
    
    .cover__intro
        color: #999

    .cover__menus
        margin-top 1.5rem
        .cover-menu 
            text-decoration none
            padding .325rem .4rem
            color var(--link-color)

            &:hover
                color var(--link-color-hover)

nav
    max-width var(--content-width)
    margin 0 auto
    text-align center

    a
        margin 0 10px
        padding 3px 10px
        background-color transparent
        border 2px dashed var(--link-color)

        &:hover
            border 2px solid var(--link-color)
            background-color var(--link-color)
            color var(--bg-content-color)
            text-decoration none
